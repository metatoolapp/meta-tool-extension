{
  "manifest_version": 3,
  "name": "sMeta Tool",
  "version": "1.3",
  "description": "Công cụ quản lý BM, Tài khoản quảng cáo, Page, Pixel và Chiến dịch Facebook.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/fontawesome/webfonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
